footer.site-footer
  .footer-container

    // COLUNA 1 — Branding + tagline + social icons
    .footer-col
      .footer-text-block
        span.footer-brand-name @Starter Kit 2026

        .footer-tagline-row
          span.footer-tagline Para projetos modernos e escaláveis.
          span.footer-rocket

        .footer-social-icons
          a(href="https://facebook.com" target="_blank" aria-label="Facebook")
            i.fa-brands.fa-facebook-f
          a(href="https://twitter.com" target="_blank" aria-label="Twitter")
            i.fa-brands.fa-twitter
          a(href="https://instagram.com" target="_blank" aria-label="Instagram")
            i.fa-brands.fa-instagram
          a(href="https://linkedin.com" target="_blank" aria-label="LinkedIn")
            i.fa-brands.fa-linkedin-in
          a(href="https://github.com" target="_blank" aria-label="GitHub")
            i.fa-brands.fa-github
          a(href="https://youtube.com" target="_blank" aria-label="YouTube")
            i.fa-brands.fa-youtube
          a(href="https://tiktok.com" target="_blank" aria-label="TikTok")
            i.fa-brands.fa-tiktok

    // COLUNA 2 — Localização
    .footer-col
      h4.footer-heading Localização
      p.footer-address
        | Rua do Futuro à noite, 2026
        br
        | Vila Nova da Cafeteira, Santarém
        br
        | Portugal

    // COLUNA 3 — Navegação
    .footer-col
      h4.footer-heading Navegação
      ul.footer-list
        li: a.footer-link(href="#menu") Menu
        

    // COLUNA 4 — Legal
    .footer-col
      h4.footer-heading Legal
      ul.footer-list
        li: a.footer-link(href="#privacy") Privacy Policy
        li: a.footer-link(href="#terms") Terms
        li: a.footer-link(href="#contact") Contact Us
       

    // COLUNA 5 — Créditos
    .footer-col.footer-credits
      h4.footer-heading Créditos
      p © 2026 SK. All rights reserved.
      p.footer-credit Starter-kit by Carlos & Copilot
      span See More at:
      a(href="https://www.codestackr.com/" target="_blank")
        strong Mike Smith. Projects.
